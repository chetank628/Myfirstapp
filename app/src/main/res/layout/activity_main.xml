<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.test.chetank628.testproject.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This will find Device name ..!"
        android:id="@+id/textView" />

    <Button
        android:text="Get Device name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_generatelog"
        android:layout_marginStart="106dp"
        android:layout_marginTop="128dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Generate logs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2_logs"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/button_generatelog"
        android:layout_alignStart="@+id/button_generatelog" />

</RelativeLayout>
